{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "curly": [
      "warn",
      "multi-line",
      "consistent"
    ],
    "eqeqeq": [
      "warn",
      "always",
      {
        "null": "ignore"
      }
    ],
    "prefer-const": "warn",
    "no-console": "off",
    "no-dupe-class-members": "off",
    "no-empty": "warn",
    "no-shadow": "warn",
    "no-undef": "error",
    "no-unused-expressions": "error",
    "no-unused-vars": "off",
    "no-var": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all",
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
